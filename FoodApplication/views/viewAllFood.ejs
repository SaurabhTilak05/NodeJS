<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Employee</title>
    <script src="ajax.js"></script>
    <link rel="stylesheet" href="style2.css" />
</head>
<body>
    <%- include("home.ejs")%>
    <div class="main">
    <div class="containe">
        <div class="form-group">
            <input type="text" name="name" value="" class="form-control" placeholder="search Food by Category" onkeyup="searchFoodByCategory(this.value)">
        </div>
        <table class="table table-striped table-secondary table-bordered">
        <tr>
            <th>SR No</th>
            <th>Name</th>
            <th>Price</th>
            <th>Availabel</th>
            <th>Category</th>
            <th>DELETE</th>
            <th>UPDATE</th>
        </tr>
        <tbody id="tblBody">

        <%
            if(FoodList.length!=0){
                FoodList.forEach((row,index)=>{
        %>
            <tr>
                <td><%=index+1%></td>
                <td><%=row.name%></td>
                <td><%=row.price%></td>
                <td><%=row.available%></td>
                <td><%=row.category%></td>
                <td><a href="/deletefood?id=<%=row.id%>" style ="color: rgb(14, 10, 50);">DELETE</a></td>
                <td><a href="/updFood?name=<%=row.name%>&id=<%=row.id%>&price=<%=row.price%>&available=<%=row.available%>&category=<%=row.category%>" style="color: black;">UPDATE</a></td> 
            </tr>
        <%
                })
            }
            else{
        %>
            <td colspan="7" style="text-align: center;"> No Data Found !!</td>
        <%
            }
        %>
        </tbody>
    </table>

    </div>
    </div>

</body>
</html>