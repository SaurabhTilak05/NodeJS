<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee</title>
</head>
<body>
    <%- include("home.ejs")%>
    <div class="container p-5 bg-dark mt-5">

        <table class="table table-striped table-dark table-bordered">
        <tr>
            <th>SR No</th>
            <th>Name</th>
            <th>Email</th>
            <th>Contact</th>
            <th>Sal</th>
            <th>Photo</th>
            <th>Dept</th>
        </tr>
        <tbody id="tblBody">

        <%
            if(Emplist.length!=0){
                Emplist.forEach((row,index)=>{
        %>
            <tr>
                <td><%=index+1%></td>
                <td><%=row.name%></td>
                <td><%=row.email%></td>
                <td><%=row.contact%></td>
                <td><%=row.sal%></td>
                <td><img src="images/<%=row.photo%>" style="height: 60px; width: 60px;"></td>
                <td><%=row.deptname%></td>
            </tr>
        <%
                })
            }
            else{
        %>
            <td colspan="4"> No Data Present..!!</td>
        <%
            }
        %>
        </tbody>
    </table>
    </div>
</body>
</html>